# Include all config files (JSON, YAML, YML) recursively
recursive-include config *.json *.yaml *.yml

# Include all source data/config files (JSON, YAML, YML) recursively
recursive-include src *.json *.yaml *.yml

# Always include top-level documentation and legal files
include README.md
include LICENSE
include NOTICE

# Example: To include all Markdown docs in docs/ (uncomment if needed)
# recursive-include docs *.md

# Example: To include all static assets (uncomment if needed)
# recursive-include src/static *

# Example: To include all files in a web frontend (uncomment if needed)
# recursive-include web-apps/frontend *

